<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VisualRemux.App.Views.LandingPageView">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
        <Label Theme="{DynamicResource TitleLabel}" Classes="H3 Grey" HorizontalContentAlignment="Center">Welcome to VisualRemux!</Label>
        <Label Theme="{DynamicResource TagLabel}" Classes="Ghost Grey" HorizontalAlignment="Center">Select a tool on the left sidebar</Label>
    </StackPanel>
</UserControl>
