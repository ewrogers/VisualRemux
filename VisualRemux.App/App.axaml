<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:semi="https://irihi.tech/semi"
             xmlns:converter="clr-namespace:VisualRemux.App.Converters"
             x:Class="VisualRemux.App.App"
             xmlns:local="using:VisualRemux.App"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <converter:CasingConverter x:Key="UpperConverter" Casing="Upper"/>
        <converter:CasingConverter x:Key="LowerConverter" Casing="Lower"/>
        <converter:CasingConverter x:Key="TitleConverter" Casing="Title"/>
    </Application.Resources>
    
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <semi:SemiTheme Locale="en-US"/>
    </Application.Styles>
             
</Application>